<div class="users_h1_box"><h1>投稿一覧</h1></div>
<table>
  <thead>
    <tr>
      <th>投稿者</th>
      <th>タイトル</th>
      <th>本文</th>
      <th>画像</th>
    </tr>
  </thead>
  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.user.name %></td>
        <td><%= picture.title %></td>
        <td><%= picture.content %></td>
        <td><%= picture.image %></td>
        <td><%= link_to '詳細を確認する', picture_path(picture.id) %></td>
        <% if picture.user.id == current_user.id %>
          <td><%= link_to "投稿を編集する", edit_picture_path(picture.id) %></td>
          <td><%= link_to '投稿を削除する', picture_path(picture.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '新しく投稿する', new_picture_path %>
<%= form_with(model: @picture, local: true ,url: choose_new_or_edit) do |f| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= @picture.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class ="field">
    <%= f.label "タイトル" %>
    <%= f.text_field :title %>
    <%= f.label "本文" %>
    <%= f.text_field :content %>
    <%= f.label "画像" %>
    <% if @picture.image.url  %>
      <%= image_tag(@picture.image.url) if @picture.image && @picture.image.url %>
    <% end %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
    <%= f.submit "投稿！"%>
  </div>
<% end %>
<%= link_to "投稿一覧画面にもどる", pictures_path %>